<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"/>

    <Button
        android:id="@+id/opn_phonebook"
        android:textColor="@color/colorBtnTxt"
        android:background="@color/colorBtnBack"
        android:text="@string/btn_open_phonebook"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/opn_customview"
        android:textColor="@color/colorBtnTxt"
        android:background="@color/colorBtnBack"
        android:text="@string/btn_open_cust_view"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/opn_webpage"
        android:textColor="@color/colorBtnTxt"
        android:background="@color/colorBtnBack"
        android:text="@string/btn_open_web"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"/>


</LinearLayout>